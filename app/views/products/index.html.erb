<div class="lp-section-4">
  <div class="ftitle">
    <div class="mtsize"> 新品推荐 </div>
    <div class="stsize">
      /淘淘乐为您精挑细选
    </div>
  </div>
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-xs-6 col-md-3">
        <div class="item">
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <div class="pic">
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail", size: "250x250") %>
              </div>
            <% else %>
              <div class="pic">
                <%= image_tag("http://placehold.it/200x200&text=NoPic",class: "thumbnail",size: "200x200")%>
              </div>
            <% end %>
          <% end %>
          <div class="name">
            <%= product.title %>
          </div>
          <div class="price">
            ¥ <%= product.price%>
          </div>
        </div>
     </div>
    <% end %>
  </div>

  <ul >
    <% @products.each do |product|%>

        <li class="item">
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <div class="pic">
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail", size: "200x200") %>
              </div>
            <% else %>
              <div class="pic">
                <%= image_tag("http://placehold.it/200x200&text=NoPic",class: "thumbnail",size: "200x200")%>
              </div>
            <% end %>
          <% end %>
          <div class="name">
            <%= product.title %>
          </div>
          <div class="price">
            ¥ <%= product.price%>
          </div>
        </li>

    <% end %>
  </ul>
</div>
</div>
