<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
     <%= f.select :category_id, @categories %>
   </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :decprice %>
  </div>

  <% if @product.photos.present? %>
    <span>目前产品图</span> <br>
    <% @product.photos.each do |p|%>
      <%= image_tag p.avatar.thumb.url%>
    <% end %>
  <% end %>

  <div class="group">
    <!--#<%= f.input :image, as: :file %>-->
    <%= f.label :"产品图" %> <br>
    <%= f.file_field :avatar,:multiple => true,name: "photos[avatar][]" %>
    <br>
  </div>

  <div class="group">
    <%= f.label :"宝贝详情" %><br>
    <%= f.file_field :avatar, :multiple => true, name: "goodsdetails[avatar][]" %>
    <br>
  </div>



  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
